rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAppUser() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      // For now, we allow any interaction without auth for admin panel
      return true;
      // return isAppUser() && getUserRole(request.auth.uid) == 'admin';
    }

    function isVolunteer() {
      // For now, we allow any interaction without auth for volunteer panel
       return true;
       // return isAppUser() && getUserRole(request.auth.uid) == 'volunteer';
    }

    match /users/{userId} {
      allow read, write: if true;
    }
    
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /preOrders/{orderId} {
      allow create: if true; 
      allow read, update: if isAdmin() || isVolunteer();
    }

    match /sales/{saleId} {
      allow read, create: if isAdmin() || isVolunteer();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to upload payment screenshots for now
    match /payment_screenshots/{allPaths=**} {
      allow write: if request.resource.size < 4 * 1024 * 1024 // Max 4MB
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
