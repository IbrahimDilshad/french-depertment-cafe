rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAppUser() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isAppUser() && getUserRole(request.auth.uid) == 'admin';
    }

    function isVolunteer() {
       return isAppUser() && getUserRole(request.auth.uid) == 'volunteer';
    }

    match /users/{userId} {
      allow read: if isAppUser();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /menuItems/{itemId} {
      allow read: if isAppUser();
      allow write: if isAdmin();
    }

    match /preOrders/{orderId} {
      // Allow any logged in user to create a pre-order
      allow create: if isAppUser(); 
      allow read, update: if isAdmin() || isVolunteer();
    }

    match /sales/{saleId} {
      allow read, create: if isAdmin() || isVolunteer();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow logged-in users to upload payment screenshots to a specific folder
    match /payment_screenshots/{allPaths=**} {
      allow write: if request.auth != null
                    && request.resource.size < 4 * 1024 * 1024 // Max 4MB
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
