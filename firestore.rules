
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAppUser() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isAppUser() && getUserRole(request.auth.uid) == 'admin';
    }

    function isVolunteer() {
       return isAppUser() && getUserRole(request.auth.uid) == 'volunteer';
    }

    match /users/{userId} {
      // Admins can create new users (team members)
      allow create: if isAdmin();
      // Users can read their own profile, admins can read any profile
      allow read: if isOwner(userId) || isAdmin();
      // Users can update their own profile, admins can update any profile
      allow update: if isOwner(userId) || isAdmin();
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    match /menuItems/{itemId} {
      // Any authenticated user can read the menu
      allow read: if isAppUser();
      // Only admins can create, update, or delete menu items
      allow write: if isAdmin();
    }

    match /preOrders/{orderId} {
      // Anyone can create a pre-order
      allow create: if true; 
      // Only admins or volunteers can read and update pre-orders
      allow read, update: if isAdmin() || isVolunteer();
    }

    match /sales/{saleId} {
      // Admins and volunteers can read and create sales
      allow read, create: if isAdmin() || isVolunteer();
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to upload payment screenshots for now
    match /payment_screenshots/{allPaths=**} {
      allow write: if request.auth != null && request.resource.size < 4 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
