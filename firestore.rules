
{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
         // Admins can write to any profile, users can only write to their own.
        ".write": "auth != null && (root.child('users').child(auth.uid).child('role').val() == 'Admin' || auth.uid == $uid)"
      }
    },
    "menuItems": {
      // Authenticated users can read, only admins can write
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'Admin'"
    },
    "preOrders": {
      // Any authenticated user can read for placing/viewing orders
      ".read": "auth != null",
      // Anyone can create an order, but only admins can update status.
      ".write": "auth != null && (!data.exists() || root.child('users').child(auth.uid).child('role').val() == 'Admin')"
    },
    "sales": {
      // Any authenticated user can read or write sales data.
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
