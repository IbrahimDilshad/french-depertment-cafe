rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAppUser() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isAppUser() && getUserRole(request.auth.uid) == 'admin';
    }

    function isVolunteer() {
       return isAppUser() && getUserRole(request.auth.uid) == 'volunteer';
    }

    match /users/{userId} {
      allow read: if isAppUser();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /menuItems/{itemId} {
      allow read: if isAppUser();
      allow write: if isAdmin();
    }

    match /preOrders/{orderId} {
      // Allow anyone to create a pre-order
      allow create: if true; 
      allow read, update: if isAdmin() || isVolunteer();
    }

    match /sales/{saleId} {
      allow read, create: if isAdmin() || isVolunteer();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
